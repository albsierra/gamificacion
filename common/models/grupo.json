{
  "name": "Grupo",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "validado": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "juego": {
      "type": "belongsTo",
      "model": "Juego",
      "foreignKey": ""
    },
    "pruebas": {
      "type": "hasMany",
      "model": "Prueba",
      "foreignKey": "",
      "through": "Marcador"
    },
    "miembros": {
      "type": "hasMany",
      "model": "Usuario",
      "foreignKey": "",
      "through": "Miembro",
      "scope": {
        "where": {
          "validado": true
        },
        "include": "usuario"
      }
    },
    "avatar": {
      "type": "hasOne",
      "model": "Imagen",
      "polymorphic": {
        "foreignKey": "imageableId",
        "discriminator": "imageableType"
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "coordinadorJuego",
      "permission": "ALLOW",
      "property": "validate"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "miembroGrupo",
      "permission": "ALLOW",
      "property": "invite"
    }
  ],
  "methods": {
    "prototype.validate": {
      "accepts": [],
      "returns": [
        {
          "arg": "grupo",
          "type": "object",
          "root": false,
          "description": "Los datos del grupo, con el atributo validado puesto a true"
        }
      ],
      "description": "Valida un grupo por cumplir con las normas establecidas.",
      "http": [
        {
          "path": "/validate",
          "verb": "put"
        }
      ]
    }
  }
}

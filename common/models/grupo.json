{
  "name": "Grupo",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "validado": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "juego": {
      "type": "belongsTo",
      "model": "Juego",
      "foreignKey": ""
    },
    "pruebas": {
      "type": "hasMany",
      "model": "Prueba",
      "foreignKey": "",
      "through": "Marcador"
    },
    "miembros": {
      "type": "hasMany",
      "model": "Usuario",
      "foreignKey": "",
      "through": "Miembro"
    },
    "avatar": {
      "type": "hasOne",
      "model": "Imagen",
      "polymorphic": {
        "foreignKey": "imageableId",
        "discriminator": "imageableType"
      }
    },
    "invitaciones": {
      "type": "hasMany",
      "model": "Invitacion",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "coordinadorJuego",
      "permission": "ALLOW",
      "property": "validate"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "miembroGrupo",
      "permission": "ALLOW",
      "property": "invite"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "aceptarInvitacion"
    }
  ],
  "methods": {
    "prototype.validate": {
      "accepts": [],
      "returns": [
        {
          "arg": "grupo",
          "type": "object",
          "root": false,
          "description": "Los datos del grupo, con el atributo validado puesto a true"
        }
      ],
      "description": "Valida un grupo por cumplir con las normas establecidas.",
      "http": [
        {
          "path": "/validate",
          "verb": "put"
        }
      ]
    },
    "prototype.invite": {
      "accepts": [
        {
          "arg": "emails",
          "type": "array",
          "required": true,
          "description": "Un array conteniendo las direcciones de correo electrónico de los usuarios a invitar",
          "http": {
            "source": "form"
          }
        },
        {
          "arg": "req",
          "type": "object",
          "required": true,
          "description": "El objeto con la petición, para obtener el accessToken",
          "http": {
            "source": "req"
          }
        }
      ],
      "returns": [
        {
          "arg": "invitados",
          "type": "array",
          "root": false,
          "description": "El objeto con la petición, para obtener el accessToken"
        }
      ],
      "description": "Permite enviar emails de invitación a otros usuarios para participar en uno de los grupos de los que el usuario es miembro.",
      "http": [
        {
          "path": "/invite",
          "verb": "post"
        }
      ]
    },
    "prototype.aceptarInvitacion": {
      "accepts": [
        {
          "arg": "token",
          "type": "string",
          "required": true,
          "description": "El token enviado junto con la invitación",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "req",
          "type": "object",
          "required": true,
          "description": "El objeto con",
          "http": {
            "source": "req"
          }
        }
      ],
      "returns": [
        {
          "arg": "miembro",
          "type": "object",
          "root": false,
          "description": "El objeto miembro creado con la invitacion"
        }
      ],
      "description": "Un usuario de la app acepta participar en un grupo al que ha sido previamente invitado.",
      "http": [
        {
          "path": "/aceptarInvitacion",
          "verb": "get"
        }
      ]
    }
  }
}
